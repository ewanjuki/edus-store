@import url("https://fonts.googleapis.com/css?family=Alegreya");
@import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap');

:root {
  --primary-color: #12376e;
  --secondary-color: #34598f;
  --tertiary-color: #23487f;
  --quartery-color: #45889f;
}

html {
  font-size: 62.5%;
}

body {
  box-sizing: border-box;
  font-family: "Alegreya", serif;
}

* {
  margin: 0;
  padding: 0;
}

.container {
  display: grid;
  grid-template-columns: minmax(6rem, 1fr) repeat(8, minmax(min-content, 16rem)) minmax(
      6rem,
      1fr
    );
  grid-template-rows: min-content 100% min-content;
  grid-row-gap: 1.6rem;
  margin-top: 1.6rem;
}

.header {
 grid-row: 1 / 2;
 grid-column: 2 / 10;
 display: grid;
 grid-template-columns: repeat(10, minmax(5rem, 1fr));
 background-color: #eee;
 padding: 2rem 1rem;
 border-bottom: .1rem solid var(--primary-color);
 align-items: center;
}

.header__logo {
  grid-column: 1 / 3;
  grid-row: 1 / -1;
  font-family: 'Dancing Script', cursive;
  font-size: 3rem;
  color: #000;
  text-decoration: none;
  text-transform: capitalize;
  vertical-align: center;
}

.header-first__nav {
  grid-column: 3 / 6;
  grid-row: 1 / -1;
  display: flex;
  align-items: center;
  height: 100%;
  list-style: none;
  margin-left: 1rem;
}

.header-second__nav {
  grid-column: 8 / -1;
  grid-row: 1 / -1;
  display: flex;
  height: 100%;
  align-items: center;
  list-style: none;
}

.header-nav__item {
  margin-right: .5rem;
}

.header-nav__item::after {
  content: "";
  width: 0;
  height: 0.1rem;
  background-color: #12376e;
  display: block;
  margin: auto;
  transition: width 0.2s cubic-bezier(0.55, 0, 0.98, 0.54);
}

.header-nav__item:hover::after {
  width: 100%;
}

.header-nav__link {
  text-decoration: none;
  color: var(--primary-color);
  font-size: 2rem;
  padding: 0 .5rem 0 .5rem;
}

.header-nav__link i {
  margin-right: .3rem;
  font-size: 1.5rem;
}

.main {
  grid-row: 2 / 3;
  grid-column: 2 / 10;
}

.featured__products {
  text-align: center;
  margin-top: 1.6rem;
}

.featured-products__title {
  font-size: 3rem;
  color: var(--tertiary-color);
  margin: 2rem 0;
}

.featured-products__wrapper {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
  grid-gap: 3.2rem;
}

.product__details {
  display: inline-block;
  text-decoration: none;
}

.product__title {
  color: var(--quartery-color);
  font-size: 1.5rem;
}

.product__price {
  color: var(--tertiary-color);
  font-size: 2rem;
}

.product__page {
  display: grid;
  grid-template-rows: repeat(10, min-content);
  grid-template-columns: repeat(5, 1fr);
  grid-gap: 3.2rem;
}

.product__intro {
  grid-column: 3 / -1;
  grid-row: 1 / 3;
  text-align: center;
  padding: 3rem;
}

.product-intro__title {
  font-size: 4rem;
  letter-spacing: .3rem;
  font-weight: 300;
  color: var(--tertiary-color);
}

.product-intro__vendor {
  font-size: 2.4rem;
  letter-spacing: .2rem;
}

.product-intro__price {
  font-size: 3rem;
  color: var(--secondary-color);
}

.product-images__wrapper {
  grid-column: 1 / 3;
  grid-row: 1 / 5;
  display: grid;
  grid-template-rows: repeat(4, min-content);
}

.product-first__image {
  grid-row: 1 / 4;
  grid-column: 1 / -1;
  width: 100%;
  object-fit: cover;
}

.product-other__images {
  grid-row: 4 / -1;
  grid-column: 1 / -1;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(10rem, 1fr));
}

.product__description {
  grid-column: 3 / -1;
  grid-row: 3 / 5;
  text-align: center;
}

.product-description__title {
  font-size: 3rem;
  font-weight: 300;
  letter-spacing: .2rem;
  color: var(--secondary-color);
}

.product-description__title ~ * {
  font-size: 2rem;
  color: var(--primary-color);
}

.product-description__title ~ ul {
  margin-top: 1rem;
  list-style: none;
}

.product-add-to-cart__form {
  grid-column: 3 / -1;
  grid-row: 5 / 7;
  text-align: center;
}

.product-add-to-cart__form .form-group {
  display: flex;
  font-size: 1.5rem;
  justify-content: center;
  align-items: center;
  color: var(--primary-color);
}

.product-add-to-cart__form select {
  margin-left: 1rem;
  font: inherit;
  background: none;
  color: var(--primary-color);
  padding: 1rem;
  border: .1rem solid var(--secondary-color);
  border-radius: .2rem;
  outline: none;
}

.product-add-to-cart__form button {
  display: inline-block;
  font: inherit;
  font-size: 2rem;
  font-weight: 300;  
  text-transform: capitalize;
  margin-top: 2rem;
  padding: 1rem;
  background-color: var(--primary-color);
  color: #fff;
  width: 20rem;
  border: .1rem solid var(--primary-color);
  border-radius: .2rem;
  outline: none;
  cursor: pointer;
  transition: all .3s;
}

.product-add-to-cart__form button:hover {
  background-color: #fff;
  color: var(--primary-color);
}

.related__products {
  grid-column: 1 / -1;
  grid-row: 8 / -1;
  text-align: center;
}

.related__products h3 {
  font-size: 2rem;
  color: var(--secondary-color);
  margin-bottom: 1rem;
}

.related-products__wrapper {
  display: grid;
  grid-column-gap: 1rem;
  grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
}

.collection__form {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  grid-template-rows: repeat(4, min-content);
  grid-gap: 3.2rem;
}

.collection__title {
  grid-column: 1 / -1;
  grid-row: 1 / 2;
  text-align: center;
  color: var(--secondary-color);
  font-size: 4rem;
}

.collection__filters {
  grid-column: 1 / 3;
  grid-row: 2 / -1;
  padding: 2rem;
}

.filtered__products {
  grid-column: 3 / -1;
  grid-row: 2 / -1;
}

.sort-by__filter, .view__filter {
  display: flex;
  flex-direction: column;
}

.sort-by__filter {
  margin-bottom: 2rem;
}

.view__filter {
  margin-bottom: 2rem;
}

.collection__filters label {
  font-size: 2rem;
  color: var(--tertiary-color);
  margin-bottom: 1rem;
}

.collection__filters select {
  font: inherit;
  font-size: 1.5rem;
  padding: .5rem;
  color: var(--primary-color);
  background-color: transparent;
  border: .1rem solid var(--primary-color);
  border-radius: .4rem;
  outline: none;
}

.collection__filters button {
  font: inherit;
  font-size: 2rem;
  background-color: var(--primary-color);
  color: #fff;
  border: .1rem solid var(--primary-color);
  border-radius: .2rem;
  outline: none;
  cursor: pointer;
  margin-bottom: 2rem;
  padding: 1rem;
}

.collection__filters ul {
  list-style: none;
  padding: 1rem;
}

.collection__filters li {
  margin-bottom: .5rem;
}

.collection__filters a {
  font-size: 1.5rem;
  text-decoration: none;
  color: var(--primary-color);
  transition: color .3s;
}

.collection__filters a:hover {
  color: var(--secondary-color);
}

.collection__filters span {
  font-size: 1.5rem;
}

.collection-grid__view {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
  grid-gap: 1.6rem;
  text-align: center;
}

.collection__pagination {
  margin-top: 2rem;
  display: flex;
  justify-content: center;
  font-size: 2.5rem;
}

.collection__pagination span {
  margin-right: .5rem;
}

.collection__pagination a {
  text-decoration: none;
  color: var(--primary-color);
}

.product-details__list {
  display: grid;
  grid-template-columns: repeat(10, 1fr);
  grid-gap: 1rem;
}

.product-details__list img {
  grid-row: 1 / -1;
  grid-column: 1 / 2;
}

.product-details__list h5, .product-details__list h6 {
  grid-row: 1 / -1;
  grid-column: 2 / 4;
}

.product-details__list p {
  grid-row: 1 / -1;
  grid-column: 10 / -1;
}

.cart-page__title {
  font-size: 4rem;
  font-weight: 300;
  color: var(--tertiary-color);
}

.cart-form__headings {
  display: grid;
  grid-template-columns: repeat(10, 1fr);
  border-bottom: .2rem solid var(--secondary-color);
  padding: 2rem 0;
  margin-bottom: 1rem;
}

.cart-form__headings h5 {
  font-size: 2.5rem;
  color: var(--secondary-color);
}

.name__heading {
  grid-column: 1 / 4;
  grid-row: 1 / -1;
}

.quantity__heading {
  grid-column: 8 / 10;
  grid-row: 1 / -1;
}

.price__heading {
  grid-column: 10 / -1;
  grid-row: 1 / -1;
}

.cart__item {
  display: grid;
  grid-template-columns: repeat(10, 1fr);
  grid-template-rows: repeat(3, min-content);
  margin-bottom: 1rem;
}

.cart-item__img {
  grid-column: 1 / 2;
  grid-row: 1 / -1
}

.cart-item__title {
  grid-column: 2 / 4;
  grid-row: 1 / 2;
  font-size: 2rem;
  color: var(--primary-color);
}

.cart-item__remove {
  grid-column: 2 / 3;
  grid-row: 2 / -1;
  font-size: 1.8rem;
  color: var(--secondary-color);
  align-self: center;
  justify-self: center;
}

.cart-item__qty {
  grid-column: 8 / 10;
  grid-row: 1 / 2;
  justify-self: start;
  align-self: start;
  padding: .5rem;
  width: 50%;
  font: inherit;
  font-size: 1.5rem;
  color: var(--primary-color);
  border: .1rem solid var(--primary-color);
  border-radius: .2rem;
  outline: none;
}

.cart-item__price {
  grid-column: 10 / -1;
  grid-row: 1 / 2;
  font-size: 1.5rem;
  color: var(--primary-color);
}

.cart-form__footer {
  margin-top: 3rem;
  display: grid;
  grid-template-columns: repeat(10, 1fr);
  grid-template-rows: repeat(2, min-content);
  row-gap: 1rem;
}

.cart-total__price {
  grid-column: 10 / -1;
  grid-row: 1 / 2;
  font-size: 2rem;
  color: var(--secondary-color);
}

.cart__buttons {
  grid-column: 9 / -1;
  grid-row: 2 / -1;
}

.cart__buttons input {
  color: #fff;
  background-color: var(--secondary-color);
  font: inherit;
  font-size: 2rem;
  border: .1rem solid var(--secondary-color);
  border-radius: .2rem;
  padding: 1rem;
  cursor: pointer;
  outline: none;
  transition: all .3s;
}

.cart__buttons input:hover {
  background-color: #fff;
  color: var(--secondary-color);
}

.footer {
  grid-column: 1 / -1;
  grid-row: 3 / -1;
  padding: 1rem;
  background-color: var(--primary-color);
}

.footer__nav {
  list-style: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer__item {
  margin: 2rem;
}

.footer__link {
  color: #fff;
  text-decoration: none;
  font-size: 3rem;
}

@media (max-width: 1050px) {
  .cart__buttons {
    grid-column: 8 / -1;
    justify-self: end;
  }

  .cart-item__title {
    grid-column: 2 / 5;
  }
}

@media (max-width: 830px) {
  html {
    font-size: 56.25%;
  }

  .header {
    grid-template-rows: repeat(2, min-content);
  }

  .header__logo {
    grid-row: 1 / -1;
  }

  .header-first__nav {
    grid-column: 6 / -1;
    grid-row: 1 / 2;
    justify-self: end;
  }

  .header-second__nav {
    grid-column: 8 / -1;
    grid-row: 2 / -1;
  }
}

@media (max-width: 746px) {
  .container{
    grid-template-columns: minmax(4rem, 1fr) repeat(8, minmax(min-content, 16rem)) minmax(
      4rem,
      1fr
    );
  }

  .product__image {
    width: 150px;
  }

  .header-second__nav {
    grid-column: 7 / -1;
    justify-self: end;
  }

  .header__logo {
    grid-column: 1 / 4;
  }

  .collection__form {
    grid-gap: 1.6rem;
  }

  .featured-products__wrapper {
    grid-template-columns: repeat(auto-fit, minmax(15rem, 1fr));
    grid-gap: 1.6rem;
  }

  .collection-grid__view {
    grid-template-columns: repeat(auto-fit, minmax(15rem, 1fr));
  }

  .related-products__wrapper {
    grid-template-columns: repeat(auto-fit, minmax(15rem, 1fr));
  }

  .footer__link {
    font-size: 2rem;
  }
}

@media (max-width: 640px) {
  html {
    font-size: 50%;
  }

  .container {
    grid-template-columns: minmax(2rem, 1fr) repeat(8, minmax(min-content, 16rem)) minmax(
      2rem,
      1fr
    );
  }

  .header-first__nav {
    grid-column: 5 / -1;
  }

  .header-second__nav {
    grid-column: 6 / -1;
  }

  .product__image {
    width: 130px;
  }

  .product__page {
    grid-gap: 1.6rem;
  }

  .product__intro, .product__description, .product-images__wrapper
    , .product-add-to-cart__form, .related__products {
    grid-column: 1 / -1;
  }

  .product-images__wrapper {
    grid-row: 5 / 7;
    grid-template-columns: 1fr 3fr;
    grid-template-rows: repeat(2, min-content);
    grid-column-gap: 1rem;
  }

  .product-first__image {
    grid-column: 1 / 2;
    grid-row: 1 / -1;
  }

  .product-other__images {
    grid-column: 2 / -1;
    grid-row: 1 / -1;
  }

  .product-add-to-cart__form {
    grid-row: 7 / 9;
  }

  .product-add-to-cart__form button {
    width: 30rem;
  }

  .related__products {
    grid-row: 9 / -1;
  }

  .collection__filters {
    grid-column: 1 / -1;
    grid-row: 2 / 3;
    padding: 1rem;
  }

  .filtered__products {
    grid-column: 1 / -1;
    grid-row: 3 / -1;
  }

  .collection__filters ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .collection__filters label, .collection__filters button {
    font-size: 2.5rem;
  }

  .collection__filters select, .collection__filters a, 
    .collection__filters span {
    font-size: 2rem;
  }

  .featured-products__wrapper {
    grid-template-columns: repeat(auto-fit, minmax(13rem, 1fr));
  }

  .collection-grid__view {
    grid-template-columns: repeat(auto-fit, minmax(13rem, 1fr));
  }

  .related-products__wrapper {
    grid-template-columns: repeat(auto-fit, minmax(13rem, 1fr));
  }

  .cart__buttons {
    grid-column: 7 / -1;
  }
}

@media (max-width: 464px) {
  html{
    font-size: 43.75%;
  }

  .container {
    grid-template-columns: minmax(1rem, 1fr) repeat(8, minmax(min-content, 10rem)) minmax(1rem, 1fr);
    margin-top: 0;
  }

  .cart-item__img {
    width: 10rem;
  }
}